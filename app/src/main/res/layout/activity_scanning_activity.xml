<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_scanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/fab_margin"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/color_secondary">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:layout_margin="@dimen/semi_fab_margin"
            android:id="@+id/imagebutton_change_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/semi_fab_margin"
            app:layout_constraintTop_toTopOf="@id/content_frame"
            app:layout_constraintEnd_toEndOf="@id/content_frame"
            android:background="@drawable/button_round_background"
            android:src="@drawable/ic_round_flash_on_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_content_scanned"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/scanner_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/fab_margin"
        android:padding="@dimen/fab_margin"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>

</androidx.constraintlayout.widget.ConstraintLayout>