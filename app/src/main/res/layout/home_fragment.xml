<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_all_images_takes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_perform_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_add_24"
        android:layout_marginBottom="@dimen/fab_margin"
        app:tint = "@android:color/white"
        android:layout_marginStart="@dimen/fab_margin"
        app:backgroundTint="@color/color_secondary_dark"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginTop="@dimen/semi_fab_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/fab_margin"
        app:borderWidth="0dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_action_capture_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        app:tint = "@android:color/white"
        android:visibility="gone"
        app:backgroundTint="@color/color_secondary_light"
        android:src="@drawable/ic_baseline_camera_alt_24"
        android:layout_margin="@dimen/semi_fab_margin"
        app:layout_constraintEnd_toEndOf="@id/fab_perform_action"
        app:layout_constraintBottom_toTopOf="@id/fab_perform_action"
        app:layout_constraintStart_toStartOf="@id/fab_perform_action"
        app:borderWidth="0dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_action_synchronise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:visibility="gone"
        app:tint = "@android:color/white"
        app:backgroundTint="@color/color_secondary"
        android:src="@drawable/ic_round_sync_24"
        app:layout_constraintEnd_toEndOf="@id/fab_perform_action"
        app:layout_constraintStart_toStartOf="@id/fab_perform_action"
        app:layout_constraintBottom_toTopOf="@id/fab_action_capture_image"
        android:layout_margin="@dimen/semi_fab_margin"
        app:borderWidth="0dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_action_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:visibility="gone"
        app:tint = "@android:color/white"
        app:backgroundTint="@color/color_primary"
        android:src="@drawable/barcode_scan"
        app:layout_constraintEnd_toEndOf="@id/fab_perform_action"
        app:layout_constraintStart_toStartOf="@id/fab_perform_action"
        app:layout_constraintBottom_toTopOf="@id/fab_action_synchronise"
        android:layout_margin="@dimen/semi_fab_margin"
        app:borderWidth="0dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_action_share_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:visibility="gone"
        app:tint = "@android:color/white"
        app:backgroundTint="@color/color_primary"
        android:src="@drawable/ic_round_compare_arrows_24"
        app:layout_constraintEnd_toEndOf="@id/fab_perform_action"
        app:layout_constraintStart_toStartOf="@id/fab_perform_action"
        app:layout_constraintBottom_toTopOf="@id/fab_action_scan"
        android:layout_margin="@dimen/semi_fab_margin"
        app:borderWidth="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>